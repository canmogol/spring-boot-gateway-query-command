<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
    <suppress files=".*[\\/]src[\\/](test|it)[\\/]" checks="[a-zA-Z0-9]*"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="JavadocVariable"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="JavadocPackage"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="AvoidInlineConditionals"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="HideUtilityClassConstructor"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="DesignForExtension"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="HiddenField"/>
    <suppress files="[\\/]com.example[\\/].*\.java$" checks="FinalParameters"/>
    <suppress files="[\\/]com.example.app.security[\\/].*Filter\.java$" checks="MethodLength"/>
    <suppress files="[\\/]com.example.app.security[\\/].*Filter\.java$" checks="ParameterNumber"/>
    <suppress files="[\\/]com.example.app.security[\\/].*Filter\.java$" checks="LineLength"/>
    <suppress files="[\\/]com.example.app.config[\\/].*Configuration\.java$" checks="JavadocMethod"/>
    <suppress files="[\\/]com.example.app.config[\\/].*Configuration\.java$" checks="DesignForExtension"/>
    <suppress files="[\\/]com.example.api.user.UserValidator.java$" checks="MagicNumber"/>
    <suppress files=".*.properties" checks="LineLength" />
    <suppress files=".*" checks="JavadocPackage" />
</suppressions>
